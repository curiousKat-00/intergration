<IfModule mod_rewrite.c>
  RewriteEngine On

  # If the request is NOT for the api, AND it's not for an existing file, AND it's not for an existing directory...
  RewriteCond %{REQUEST_URI} !^/api/
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  # ...then rewrite it to index.html to be handled by React Router.
  RewriteRule . /index.html [L]
</IfModule>