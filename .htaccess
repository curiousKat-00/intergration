# Turn on URL rewriting
RewriteEngine On

# If the request is for a file in the /api/ directory, serve it directly and stop processing rules.
RewriteRule ^api/ - [L]

# For all other requests, if it's not a real file or directory on the server,
# forward the request to index.html so React Router can handle the client-side routing.
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . index.html [L]

